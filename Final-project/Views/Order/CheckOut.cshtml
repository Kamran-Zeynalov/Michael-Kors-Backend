@using Final_project.Models
@{
    ViewData["Title"] = "CheckOut";
    User user = ViewBag.User;
    Basket basket = ViewBag.Basket;
}

@model OrderViewModel

<section id="Checkout">
    <div class="container-fluid">
        <div class="row">
            <div class="checkout">
                <h3 style="color:red;text-align:center;margin-top:0;">9999-8888-7777-6666</h3>
                <h6>Shipping Address</h6>
                <form class="check-out" asp-controller="Order" asp-action="CheckOut" method="post" enctype="multipart/form-data">
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label class="form-control-label" for="FirstName">First Name*</label>
                        <span class="required">*Required</span>
                        <input asp-for="@user.Name" type="text" value="@user.Name" class="form-control" id="firstName" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="LastName">Last Name*</label>
                        <input asp-for="@user.SurName" type="text" value="@user.SurName" class="form-control" id="lastName" readonly>
                    </div>

                    <div class="form-group">
                        <label asp-for="Number" class="form-control-label" for="PhoneNumber">
                            Phone
                            Number*
                        </label>
                        <input asp-for="Number" type="tel" class="form-control" id="phoneNumber" placeholder="(000) 000 - 0000" value="@user.PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="form-control-label" for="Address">Address*</label>
                        <input asp-for="Address" type="text" class="form-control" id="Address">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-control-label" for="image">Receipt Image*</label>
                        <input asp-for="ReceptImageFile" type="file" class="form-control" id="image">
                    </div>
                    <button class="button-save-changes" type="submit">SAVE CHANGES</button>
                    <button class="cancel-btn" id="cancelButton">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</section>